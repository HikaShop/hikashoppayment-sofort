<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashoppayment">
	<name>Hikashop SOFORT Payment Plugin</name>
	<creationDate>30 December 2015</creationDate>
	<version>2.6.1</version>
	<author>LG Solutions</author>
	<authorEmail>info@lgsolutions.be</authorEmail>
	<authorUrl>www.lgsolutions.be</authorUrl>
	<copyright>(C) 2013 LG solutions. All rights reserved. / Copyright (C) 2012-2015 Hikari Software</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your SOFORT payment system</description>
	<files>
		<filename plugin="sofort">sofort.php</filename>
		<filename>sofort_end.php</filename>
		<filename>index.html</filename>
		<folder>library</folder>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
